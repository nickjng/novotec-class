<h2>Tasks</h2>



{{#if tasks}}

{{#each tasks}}
<ul class="task-list">
    <li>
        {{#if this.done}}
        <a href="/" class="title done">{{this.title}}</a>
        {{else}}
        <a href="/" class="title">{{this.title}}</a>
        {{/if}}
        <div class="actions">
            <form action="/tasks/done" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button style="background-color: transparent; border:none; cursor: pointer;" type="submit">
                    <i class="bi bi-check2-square"></i>
                </button>

            </form>

            <a href="/tasks/update/{{this.id}}"><i class="bi bi-pencil-square"></i></a>

            <form action="/tasks/delete" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button style="background-color: transparent; border:none; cursor: pointer;" type="submit">
                    <i class="bi bi-trash3-fill"></i>
                </button>

            </form>
        </div>
    </li>
</ul>
{{/each}}
{{else}}
<h4>Sem Tasks..</h4>

{{/if}}